{
  "name": "micro-fastify",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "k:del-ing": "kubectl delete ing --ignore-not-found=true ingress-service",
    "k:del-secrets": "kubectl delete secret --ignore-not-found=true domain jwt-secret",
    "k:secret-domain": "kubectl create secret generic domain --from-literal=DOMAIN=fa.is",
    "k:secret-jwt": "kubectl create secret generic jwt-secret --from-literal=JWT_SECRET=Key123",
    "skaf:prep": "pnpm k:del-ing && pnpm k:del-secrets && pnpm k:secret-domain && pnpm k:secret-jwt",
    "skaf:reset": "pnpm skaf:prep && skaffold dev",
    "skaf": "pnpm skaf:prep && skaffold dev --cleanup=false",
    "dev": "npx concurrently -k -c yellow,cyan,green,blue,purple npm:dev:*",
    "dev:client": "SERVICE_PORTS=auth:3001 NEXT_PUBLIC_API_URL=http://localhost:3000 pnpm -C client dev",
    "dev:auth": "PORT=3001 pnpm -C auth dev",
    "test": "npx concurrently -k -c cyan,green,blue,purple npm:test:*",
    "test:auth": "pnpm -C auth test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {}
}
