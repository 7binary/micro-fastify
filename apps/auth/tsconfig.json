{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "ts-node": {"files": true},
  "exclude": ["src/**/__test__", "src/**/*.test.ts"]
}
