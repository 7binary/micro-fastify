{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build"
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
}
